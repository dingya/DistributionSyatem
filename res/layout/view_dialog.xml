<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical" >

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:textColor="#447464"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="right"
            android:text="@string/productline_name" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="#888888"
            android:id="@+id/tv_productLineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="pro_1" />
    </LinearLayout>

    
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
         android:layout_marginBottom="12dp"
        android:orientation="vertical" >
         

        <TextView
            android:textSize="17sp"
            android:textColor="#447464"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="right"
            android:text="@string/bom_num" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="#888888"
            android:id="@+id/tv_bomNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="Aq00012" />
    </LinearLayout>

    
     <TextView android:layout_width="match_parent"
         android:layout_height="0.3dp"
         android:background="@color/button_color_nomal"/>
    
     <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button android:id="@+id/btn_diologCancel"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/dialog_cancel"
            android:background="@drawable/selector_cancelbtn_bg"
            />
        <Button android:id="@+id/btn_diologPositive"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/dialog_positive"
            android:textColor="@color/grey_white"
            android:background="@drawable/selector_positivebtn_bg"
            />
     </LinearLayout>
</LinearLayout>